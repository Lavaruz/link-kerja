            </span>
            <div class="inline-flex mt-2 xs:mt-0 gap-4">
                <button id="pagination-back" class="disabled:bg-main/60 flex items-center justify-center px-6 py-1.5 text-base font-medium text-white bg-main rounded-lg hover:bg-main/90">
                    <i class="uil uil-angle-left text-xl"></i>
                </button>
                <button id="pagination-forward" class="disabled:bg-main/60 flex items-center justify-center px-6 py-1.5 text-base font-medium text-white bg-main border-gray-700 rounded-lg hover:bg-main/90">
                    <i class="uil uil-angle-right text-xl"></i>
                </button>
            </div>
        </div>

    </div>
</main>


<%- include('./layouts/footer'); -%>

<script>
    let urlParams = new URLSearchParams(new URL(window.location.href).search);
    let pageParam = urlParams.get('page');
    let PAGE = pageParam ? parseInt(pageParam, 10) : 1;
    let LIMIT = 9

    CountAllPlatform()
    GetPosts("", "", LIMIT, PAGE)

    $("#pagination-back").click(function(){ 
        PAGE -= 1
        GetPosts("", "", LIMIT, PAGE)
        document.getElementById("search-bar").scrollIntoView();
        CountAllPlatform()
    })
    $("#pagination-forward").click(function(){ 
        PAGE += 1
        GetPosts("", "", LIMIT, PAGE)
        document.getElementById("search-bar").scrollIntoView();
        CountAllPlatform()
    })
    








    function decrypt(data, keys='<%= process.env.AES_KEYS %>'){
        let bytes = CryptoJS.AES.decrypt(data, keys)
        return JSON.parse(bytes.toString(CryptoJS.enc.Utf8))
    }

    function GetPosts(keyword="", platform="", limit='999', page=1){
        const url = `/api/v1/posts?search=${keyword}&platform=${platform}&limit=${limit}&page=${page}`
        $.get(url, function(postsData){
            postsData = decrypt(postsData.r)

            if (postsData.datas.length !== 0){
                $("#cards").html("")
                postsData.datas.forEach(post => {
                    GetCard(post)
                });
                $("#paginations").removeClass("hidden")
            }else{
                $("#paginations").addClass("hidden")
                $("#cards").addClass("hidden")
                $("#cards-notfound").removeClass("hidden")
            }
        })
    }

    function GetCard(post){
        $("#cards").append(`
            <a target="_blank" href="${post.link}" class="hover:scale-[1.005] duration-100 shadow-md border border-main bg-white p-4 rounded-2xl self-start">
                <p class="font-bold text-black">${post.title.length > 33 ? post.title.substring(0,33)+"..." : post.title}</p>
                <p class="text-sm text-black">PT UOB</p>
                <p class="text-xs px-2 bg-main w-max mt-2 rounded-sm mb-4 text-background">INTERNSHIP</p>
                <hr class="my-2">
                <p class="text-sm flex items-center gap-2"><i class="uil uil-building"></i> <span class="font-medium">${post.tags.length > 20 ? post.tags.substring(0,20)+"..." : post.tags}</span> â€¢ <span>${post.location.length > 18 ? post.location.substring(0,18)+"..." : post.location}</span></p>
                <p class="text-sm flex items-center gap-2"><i class="uil uil-bag"></i>in ${post.platform}</p>
                <p class="text-sm flex items-center gap-2 mt-2"><i class="uil uil-upload"></i><span class="text-xs font-medium">${timeAgo(post.post_date)}</span></p>
            </a>
        `)
    }

    function CountAllPlatform(){
        $.get("/api/v1/posts/count-all", postsCount =>{
            $(".total-post").text(postsCount)

            let startLimit = ((PAGE -1) * LIMIT)+1
            let endLimit = PAGE * LIMIT < postsCount ? PAGE * LIMIT : postsCount

            $("#limit-start").text(startLimit)
            $("#limit-end").text(endLimit)
            if(PAGE == 1) $("#pagination-back").prop("disabled", true)
            if(PAGE * LIMIT > postsCount) $("#pagination-forward").prop("disabled", true)
        })
    }

    function timeAgo(dateString) {
        const date = new Date(dateString);
        const now = new Date();
        
        // Menghilangkan perbedaan waktu agar hanya tanggal yang dibandingkan
        date.setHours(0, 0, 0, 0);
        now.setHours(0, 0, 0, 0);

        const diffInMilliseconds = now - date;
        const diffInDays = Math.floor(diffInMilliseconds / (1000 * 60 * 60 * 24));

        if (diffInDays < 7) {
            return `Postingan minggu ini`;
        } else if (diffInDays < 14) {
            return `Postingan minggu lalu`;
        } else {
            return `Postingan beberapa minggu lalu`;
        } 
    }
</script>